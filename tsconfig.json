{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "baseUrl": ".",
    "outDir": "dist",
    "removeComments": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "inlineSources": true,
    "sourceRoot": "/",
    "noEmitHelpers": true,
    "importHelpers": true,
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": ["src/**/*"]
}
